<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="JPA-HBM">

        <class>fr.litopia.model.Station</class>
        <class>fr.litopia.model.Bornette</class>
        <class>fr.litopia.model.Velo</class>
        <class>fr.litopia.model.Location</class>
        <class>fr.litopia.model.Client</class>
        <class>fr.litopia.model.Abonne</class>
        <class>fr.litopia.model.Model</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:4306/ave?createDatabaseIfNotExist=true"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="secret"/>
            <property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.dialect" value=""/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>

    </persistence-unit>
</persistence>